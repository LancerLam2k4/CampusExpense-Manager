<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <!-- Block 1: Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>

    <!-- Block 2: Total Expenses Used -->
    <LinearLayout
        android:id="@+id/totalExpensesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_corners"
        android:layout_below="@id/logo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/totalExpensesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Expenses Used"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/totalExpensesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Block 3: Expenses List -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/totalExpensesLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/expensesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/listview_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/expensesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/black"/>

            <!-- Placeholder for dynamic items, each will be added programmatically -->
            <ListView
                android:id="@+id/expensesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Block 4: Floating Action Button for Adding Expense -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddExpense"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
    app:backgroundTint="@color/colorAccent"
    android:src="@drawable/ic_add"
    android:contentDescription="Add Expense"/>
</RelativeLayout>
